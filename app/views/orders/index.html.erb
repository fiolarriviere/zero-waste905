<% @orders.each do |order| %>
    <% order.line_items.each do |item| %>
    <p>Name: <%= order.first_name %></p>
    <p>Email: <%= order.email %></p>
  <p>Line Items: </p>
    <li><%= item.quantity %> x <%= item.product.name %></li>

      <div class="image-box">
          <%= cl_image_tag item.product.photos.last.key, crop: :fill %>
      </div>
    <% end %>
<% end %>
