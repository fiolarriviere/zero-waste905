<div class="container-padding h-100">
  <% @orders.each do |order| %>
    <% order.line_items.each do |item| %>
            <div class="card-body p-4 row d-flex align-items-right">
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-md-2">
                      <div class="image-dox">
                          <%= cl_image_tag item.product.photos.last.key, crop: :fill %>
                      </div>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0"><%= item.product.name %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Cantidad: <%= item.quantity %> </p>
                    </div>
                    <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">Precio total: <%= number_to_currency(item.total_price) %></p>
                    </div>
                  </div>
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                </div>
              </div>
            </div>
    <% end %>
  <% end %>
</div>
