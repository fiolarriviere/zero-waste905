<div class="container py-5">
  <div class="container py-5">
    <div class="container-carrito">
      <div class="row">
        <div class="col-12 mx-3">
          <div class="row">
            <div class="col-4">
              <h1 class="Shopping-Cart text-center"> Shopping Cart </h1> <%#= render "shared/cartsidebar" %>
            </div>
            <div class="col-4 ">
              <div>
              </div>
            </div>
            <div class="col-4">
              <h1 class="Vaciar-carrito">
                <%= link_to "Vaciar Carrito", cart_path(@cart),
                data: { turbo_method: :delete, turbo_confirm: "Estas seguro de vaciar el carrito?" } %>
              </h1>
            </div>
          </div>
          <div class="total-amount"></div>
        </div>
        <div class="py-3">
         <% if @current_cart.sum_total > 0  %>
          <button class="btn btn-ghost"><%= link_to "Comprar", new_order_path %></button>
         <% else %>
          <button class="btn btn-ghost"><%= link_to "Comprar", products_path %></button>
         <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
