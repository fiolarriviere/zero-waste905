<div class="container py-5">
  <div class="container py-5">
    <div class="container-carrito">
      <div class="row">
        <div class="col-12 mx-3">
          <div class="row">
            <div class="col-4">
              <h1 class="Shopping-Cart text-center"> Shopping Cart </h1> <%#= render "shared/cartsidebar" %>
            </div>
            <div class="col-4 ">
              <div>
              </div>
            </div>
            <div class="col-4">
              <h1 class="Vaciar-carrito">
                <%= link_to "Vaciar Carrito", cart_path(@cart),
                data: { turbo_method: :delete, turbo_confirm: "Estas seguro de vaciar el carrito?" } %>
              </h1>
            </div>
          </div>


<div class="row">

    <% @cart.line_items.each do |line_item| %>

      <div class="col-12 col-lg-4">
        <%= cl_image_tag line_item.product.photos.last.key, crop: :fill, class: "image-box" %>
      </div>
      <div class="col-12 col-lg-4">
        <h3 class="text-lg-left"> <%= line_item.product.name %> </h3>
      </div>
      <div class="col-12 col-lg-4">
        <%= link_to "-", line_item_reduce_path(line_item) %>
        <%= line_item.quantity %>
        <%= link_to "+", line_item_add_path(line_item) %>
        <br>
                  <%= number_to_currency(line_item.product.price) %> <br>
                  <%= link_to "Remover elemento", line_item_erase_path(line_item),
                  data: { turbo_method: :delete, turbo_confirm: "Deseas elimninar este item?" } %>
      </div>

      <div class="">
      </div>

      <br>
    <% end %>

</div>

          <hr>

          <div class="">
            <div class="pt-2"> <%= number_to_currency(@cart.sub_total) %> </div>
            <div class=""> <%= @cart.sum_total %> items </div> <br>
            <div class=""> <%= link_to "Comprar", new_order_path, class: "btn btn-ghost" %> </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
