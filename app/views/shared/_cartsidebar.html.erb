
    <div class="container mx-auto p-8"
        data-controller="slideover"
        data-slideover-active-target="#slideover-target">
      <!-- begin sidebar/slideover -->
      <div id="sidebar">
        <div data-slideover-target="overlay" class="fixed inset-0 flex z-40 transition-opacity ease-linear duration-300 opacity-0 hidden">
          <div class="fixed inset-0">
            <div class="absolute inset-0 bg-gray-600 opacity-75"></div>
          </div>
          <div id="slideover-target" data-slideover-target="menu" class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-gray-800 transition ease-in-out duration-300 transform -translate-x-full hidden">
            <div class="absolute top-0 right-0 -mr-14 p-1">
              <button data-action="slideover#hide" class="flex items-center justify-center h-12 w-12 rounded-full focus:outline-none focus:bg-gray-600" aria-label="Close sidebar">
                <svg class="h-6 w-6 text-white" stroke="currentColor" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
              <div class="super py-5 mt-3">
                <div class="CartContainer">
                    <div class="Header">
                      <h3 class="Heading">Shopping Cart</h3>
                      <h3 class="Heading">
                      <%= link_to "Vaciar Carrito",
                        cart_path(@cart),
                          data: {turbo_method: :delete, turbo_confirm: "Estas seguro de vaciar el carrito?"}
                      %>
                      </h3>
                    </div>
                    <% @cart.line_items.each do |line_item| %>
                      <div class="Cart-Items">
                          <div >
                          <%# line_item.product.photos.each do |photo| %>
                            <%#= cl_image_tag photo.key, height: 120, width: 500, crop: :pad  %>
                            <%= cl_image_tag line_item.product.photos.last.key, crop: :fill, class: "image-box" %>
                          <%#end %>
                          </div>
                          <div class="about">
                            <h1 class="title"><%= line_item.product.name %></h1>
                          </div>
                          <div class="counter">
                            <div class="btn"><%= link_to "-", line_item_reduce_path(line_item) %></div>
                            <div class="count"><%= line_item.quantity %></div>
                            <div class="btn" ><%= link_to "+", line_item_add_path(line_item)%></div>
                          </div>
                          <div class="prices">
                            <div class="amount"><%= number_to_currency(line_item.product.price) %></div>
                            <%= link_to "Remover elemento",
                              line_item_erase_path(line_item),
                              data: {turbo_method: :delete, turbo_confirm: "Deseas elimninar este item?"}
                            %>
                          </div>
                      </div>
                    <% end %>
          <hr>
                  <div class="checkout">
                  <div class="total">
                    <div>
                      <div class="Subtotal"><%= number_to_currency(@cart.sub_total) %></div>
                      <div class="items"><%= @cart.sum_total %> items</div>
                    </div>
                    <div class="total-amount"></div>
                  </div>
                  <div class="py-3">
                    <button class="btn btn-ghost"><%= link_to "Comprar", new_order_path %></button>
                  </div>
                  </div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </div>

