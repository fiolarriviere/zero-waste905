<div class="grid-container py-1">
  <div class="grid-item px-5">
    <div class="d-flex flex-column">
      <h1>Editar Producto</h1>
      <div class=".form-control">
      <%= simple_form_for (@product) do |f| %>

        <%= f.association :category, label: "Categoria del Producto:",
        prompt: "Elija una categoría", required: true %>

        <%= f.input :name, label: "Nombre del Producto:",
        placeholder: "Ingrese el nombre del producto",
        required: true %>

        <%= f.input :original_price, label: "Precio Real del Producto:",
        placeholder: "Ingrese el precio original del producto", required: true %>
        <%= f.input :discount, label: "Descuento del Producto:",
        placeholder: "Ingrese el descuento del producto", required: true %>
        
        <%= f.input :stock, label: "Stock del Producto:",
        placeholder: "Ingrese Stock del Producto", required: true %>

        <%= f.input :expiration_date, html5: true,
        label: "Fecha de Expiración del Producto:", required: true %>

        <%= f.input :description, label: "Descripción del Producto:",
        placeholder: "Descripcion del producto" %>

        <%= f.input :photos, as: :file,
        input_html: { multiple: true }, required: true %>

        <%= f.submit class: "btn btn-success" %>
        <%= link_to "Salir", products_path, class: "btn btn-danger" %>

        <% end %>
      </div>
  </div>
</div>
