<div class="container py-5">
  <div class="container py-5">
    <div class="d-flex justify-content-around py-5">
      <div class="contenedor-new">
      <h1 class="text-center pt-3 pb-3"><strong> Registro de Producto </strong></h1>
        <%= simple_form_for (@product) do |f| %>
          <div class="d-flex flex-row align-items-around">
            <div class="d-flex justify-content-start align-items-start mx-3">
              <%= f.association :category, label: "Categoria del Producto:", prompt: "Categoría del Producto" %>
            </div>
            <div class="d-flex justify-content-end align-items-start mx-5 ">
              <%= f.input :name, label: "Nombre del Producto:", placeholder: "Nombre del producto", required: true %>
            </div>
          </div>
          <div class="d-flex align-items-around">
            <div class="d-flex justify-content-start align-items-start mx-3">
              <%= f.input :original_price, as: :string, label: "Precio Real del Producto:", placeholder: "Precio original del producto",
              pattern: [0-9], required: true %>
            </div>
            <div class="d-flex justify-content-start align-items-start mx-5">
              <%= f.input :discount, as: :string, label: "Descuento del Producto:", placeholder: "Descuento del producto", required: true %>
            </div>
          </div>
          <div class="d-flex align-items-around ">
            <div class="d-flex justify-content-start align-items-start mx-3">
              <%= f.input :stock, as: :string, label: "Stock del Producto:", placeholder: "Stock del Producto", required: true %>
            </div>
            <div class="d-flex justify-content-start align-items-start mx-5">
              <%# if @product.category.id == 2 || @product.category.id == 4 %>
                <%= f.input :expiration_date, html5: true, label: "Fecha de Expiración:", required: true %>
              <%# else %>
                <%#= f.input :expiration_date = nill %>
              <%# end %>
            </div>
          </div>
          <div class="mx-3">
            <%= f.input :description, label: "Descripción del Producto:",
            placeholder: "Descripcion del producto", required: true %>
          </div>
          <div class="mx-3">
            <%= f.input :photos, label: "Imagen a cargar", as: :file,
            input_html: { multiple: true }, required: true %>
          </div>
          <div class="d-flex justify-content-around pt-2 pb-4">
            <%= f.submit "Enviar", class: "btn btn-ghost" %>
            <%= link_to "Salir", products_path, class: "btn btn-ghost" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
