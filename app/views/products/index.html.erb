<div class="container mt-3 bg-white">
  <h3>Zero Waste - <%=  %></h3>
  <div>
    <form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
      <div class="search-form-control form-group">
        <input class="form-control string required" type="text" name="search[query]" id="search_query" />
        <button name="button" type="submit" class="btn btn-flat">
          <i class="fas fa-search"></i> Search
        </button>
      </div>
    </form>
  </div>

  <div class="card-trip">
    <% @products.each do |product| %>
    <p class="text">Las utlimas <%= product.stock %></p>
      <% product.photos.last(1).each do |photo| %>
        <%= cl_image_tag photo.key, crop: :fill %>
      <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= product.name %></h2>
      </div>
      <div>
        <h2 class="card-trip-pricing mt-2">S/. <%= product.original_price.round(2) %></h2>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        <h2 class="card-trip-pricing mt-2">Dsct <%= product.discount.round(2) %>%</h2>
        <h2 class="card-trip-pricing mt-2">S/. <%= product.price.round(2) %></h2>
      </div>
    </div>
    <div>
      <%= link_to "AGREGAR", product_path(product.id), class: "btn btn-ghost"%>
      <%= link_to "COMPRAR", product_path(product), class: "btn btn-ghost" %>
      <%= link_to "EDITAR", edit_product_path(product), class: "btn btn-ghost" %>
      <%= link_to "ELIMINAR", root_path(product.id), class: "btn btn-ghost" %>
    </div><br>
    <% end %>
  </div>
</div>
