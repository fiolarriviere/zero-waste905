<div class="container py-3">
  <div class="container">

    <div class="container bg-white pt-4 pb-4 d-flex justify-content-center">
      <%# Si user tiene Ruc, puede registrar %>
      <% if current_user.ruc.present? %>
        <%= link_to "Nuevo Registro", new_product_path, class: "btn btn-ghost" %>
      <% end %>
      <%# sino solo muestra el buscador %>
      <%= form_with url: "products_path", method: :get, class: "d-flex w-100" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Â¿QuÃ© producto buscas?"
          %>
          <%= submit_tag "Buscar", class: "btn btn-outline-success" %>
        <% end %>
    </div>

    <div class="product_container">
      <% @products.each do |product| %>
      <div class="card-trip rounded py-3">
        <% product.photos.last(1).each do |photo| %>
          <%= cl_image_tag photo.key, crop: :fill %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2>S/. <%= product.original_price.round(2) %></h2>
            <h3>S/. <%= product.price.round(2) %></h3>
            <h4><%= product.name.truncate(30) %> </h4>
            <h5>Vencimiento: <%= product.expiration_date %></h5>
          </div>
          <p class="badge rounded-pill text-bg-success h1"> <%= product.discount.round(2) %>% </p>
        </div>
        <div class="text-center">
          <%= link_to "Agregar", product_path(product), class: "btn btn-ghost" %>
          <%= link_to "Comprar", product_path(product), class: "btn btn-ghost" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
