<%# CARDS - LO MÁS VENDIDO %>

<div class="container">
  <div class="pb-3 d-flex">
    <h4>Lo más destacado del mes:</h4>
  </div>

    <div class="product_container">
      <% @products.last(6).each do |product| %>
      <div class="card-trip rounded py-3">

<% if product.stock.to_i < 15 %>
          <p> Últimas <%= product.stock %> Unds. </p>
        <% end %>


      <% product.photos.last(1).each do |photo| %>
          <%= link_to product_path(product) do %>
            <%= cl_image_tag photo.key, crop: :pad, class: "imagen" %>
          <% end %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2>S/ <%= product.original_price %></h2>
            <h3>S/ <%= product.price %></h3>
            <h4><%= product.name.truncate(30) %> </h4>
            <h5>Vencimiento: <%= product.expiration_date %></h5>
          </div>
          <h6 class="badge rounded-pill text-bg-success h1"> -<%= product.discount %>% </h6>
        </div>
        <div class="text-center">
          <%= link_to "Agregar", product_path(product), class: "btn btn-ghost" %>
          <%= link_to "Comprar", product_path(product), class: "btn btn-ghost" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  </div>


